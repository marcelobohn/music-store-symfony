{% extends 'base.html.twig' %}

{% block title %}Album index{% endblock %}

{% block body %}
    <h1>Album</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Artist</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for album in albums %}
            <tr>
                <td>{{ album.id }}</td>
                <td>{{ album.albumName }}</td>
                <td>
                    {% if album.getAge() > 0 %}
                        {{ album.getAge() }} year(s)
                    {% else %}
                        Less then 1 year
                    {% endif %}
                </td>
                <td><a href="{{ path('artist_show', {'id': album.getArtist().getId()}) }}">{{ album.getArtist().getArtistName() }}</a></td>
                <td>
                    <a href="{{ path('album_show', {'id': album.id}) }}" class="btn btn-lg btn-primary btn-sm">show</a>
                    <a href="{{ path('album_edit', {'id': album.id}) }}" class="btn btn-lg btn-success btn-sm">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('album_new') }}" class="btn btn-lg btn-primary btn-sm">Create new</a>
{% endblock %}
