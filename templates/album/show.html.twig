{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <h1>Album</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ album.albumName }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ album.year }}</td>
            </tr>
            <tr>
                <th>Artist</th>
                <td><a href="{{ path('artist_show', {'id': album.getArtist().getId()}) }}">{{ album.getArtist().getArtistName() }}</a></td>
            </tr>            
        </tbody>
    </table>

    <a href="{{ path('album_index') }}" class="btn btn-lg btn-primary btn-sm">back to list</a>

    <a href="{{ path('album_edit', {'id': album.id}) }}" class="btn btn-lg btn-primary btn-sm">edit</a>

    {{ include('album/_delete_form.html.twig') }}
{% endblock %}
